<?php

namespace Model;
class DetalleVenta extends ActiveRecord
{
    public static $tabla = 'detalle_venta';
    public static $columnasDB = [
        'id_venta',
        'id_producto',
        'cantidad',
        'precio_unitario',
        'subtotal'
    ];

    public static $idTabla = 'id_detalle';
    public $id_detalle;
    public $id_venta;
    public $id_producto;
    public $cantidad;
    public $precio_unitario;
    public $subtotal;

    public function __construct($args = [])
    {
        $this->id_detalle = $args['id_detalle'] ?? null;
        $this->id_venta = $args['id_venta'] ?? null;
        $this->id_producto = $args['id_producto'] ?? null;
        $this->cantidad = $args['cantidad'] ?? 1;
        $this->precio_unitario = $args['precio_unitario'] ?? 0.00;
        $this->subtotal = $args['subtotal'] ?? 0.00;
    }

    public static function EliminarDetalle($id_eliminado)
    {
        $sql = "DELETE FROM detalle_venta WHERE id_detalle = $id_eliminado";
        return self::SQL($sql);
    }
}